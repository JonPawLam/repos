<Page
    x:Class="FV_007.UI_Boston"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FV_007"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Grid Background="#4036E5" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Menu - Hjem -->
            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\plane.png" Height="50" Width="70" />
            </StackPanel>
            <!-- Menu - Søg -->
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\search.png" Height="50" Width="70" />
            </StackPanel>
            <!-- Menu - liste over bolig -->
            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\list.png" Height="50" Width="70" />
            </StackPanel>
            <!-- Menu - enkelt bolig-->
            <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\home1.png" Height="50" Width="70" />
            </StackPanel>
            <!-- Menu - kontakt -->
            <StackPanel Grid.Row="4" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\contacts.png" Height="50" Width="70" />
            </StackPanel>
            <!-- Menu - log-in -->
            <StackPanel Grid.Row="5" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                <Image Source="Assets\lock.png" Height="50" Width="70" />
            </StackPanel>

        </Grid>

        <!-- Grid 2 -->
        <Grid Grid.Row="1" Grid.Column="1"  Background="White" Padding="50,0,50,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="600"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                <TextBlock Foreground="#4036E5" FontWeight="Bold" FontFamily="Cordia New" FontSize="72"  Text="Boston"/>
            </StackPanel>

            <!-- Grid 3 - Gallery -->
            <Grid Grid.Row="1" Grid.Column="0" Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="600">
                    <Image Source="Assets\image-icon1.jpg" Height="396" Margin="10,0,9.5,0" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image Source="Assets\image-icon1.jpg" Height="200" Width="370" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image Source="Assets\image-icon1.jpg" Height="200" Width="370" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image Source="Assets\image-icon1.jpg" Height="200" Width="370" />
                </StackPanel>


            </Grid>

            <!-- Grid 4 -->
            <Grid Grid.Row="1" Grid.Column="1" Background="LightGray" Padding="50,40,50,40" Margin="97.5,10,9.5,-178" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Cordia New" FontSize="42"  Text="Drømme ferien i Boston..."/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Cordia New" FontSize="24" Margin="0,0,0,40"  Text="INFO Lorem ipsum dolor sit amet, lacinia leo et                                sapien aenean, congue inventore sapien morbi at, quis varius id ut cras, maecenas ac, mattis bibendum eu. Mi                                 pellentesque nunc consequat, enim dui pede in ut diam, dui gravida luctus ullamcorper mauris, in volutpat orci                                                                morbi mollis, vestibulum id feugiat augue urna. Eros lacus commodo, eros est donec id vestibulum. Mi ut fusce                                 semper interdum arcu, et dolor amet porta volutpat, viverra elit maecenas at nonummy ut ultrices, at fusce pede,                                maecenas malesuada donec pulvinar aliquam ac odio. Purus nunc, nec quis, enim non aliquam, hendrerit duis gravida                                 sed consequat tellus, platea erat at facilisis ultricies elementum sodales. Elit cras fringilla magna sed, aptent                                 dolor arcu quisque nullam felis, diam venenatis." Height="333" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Cordia New" FontSize="42"  Text="Faciliteter: "/>
                </StackPanel>

                <!-- Facilitets bokse -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                        <Image Source="Assets\fac-wifi.png" Height="50" Width="70" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                        <Image Source="Assets\fac-pool.png" Height="50" Width="70" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                        <Image Source="Assets\fac-beach.png" Height="50" Width="70" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="3" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                        <Image Source="Assets\fac-transport.png" Height="50" Width="70" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom" Padding="10,10,10,10" >
                        <Image Source="Assets\fac-rest.png" Height="50" Width="70" />
                    </StackPanel>

                </Grid>

                <!-- Pris / Book -->
                <Grid Grid.Row="4" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                        <TextBlock Foreground="Black" FontFamily="Cordia New" FontSize="42"  Text="PRIS ,-"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Bottom">
                        <Button Background="white" Padding="50,0" Foreground="Black" FontFamily="Cordia New" FontSize="42">Book</Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
