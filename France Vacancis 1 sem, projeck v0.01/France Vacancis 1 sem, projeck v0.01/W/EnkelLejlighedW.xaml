<Page
    x:Class="France_Vacancis_1_sem__projeck_v0._01.W.EnkelLejlighedW"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:France_Vacancis_1_sem__projeck_v0._01.W"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Grid 2 -->
        <Grid Grid.Row="1" Grid.Column="1"  Background="LightBlue" Padding="50,50,50,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="600"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                <TextBlock Foreground="Black" FontFamily="Segoe UI Light" FontSize="42"  Text="Page Title"/>
            </StackPanel>

            <!-- Grid 3 -->
            <Grid Grid.Row="1" Grid.Column="0" Background="DarkGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Background="Green" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="0,0,0.4,0" VerticalAlignment="Stretch" />
                <Border Grid.Row="0" Grid.Column="1" Background="Blue" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="59.133,0,0,0" VerticalAlignment="Stretch"/>
                <Border Grid.Row="1" Grid.Column="1" Background="Yellow" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="59.133,0,0,0" VerticalAlignment="Stretch"/>
                <Border Grid.Row="2" Grid.Column="1" Background="Bisque" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="59.133,0,0,0" VerticalAlignment="Stretch"/>

            </Grid>

            <!-- Grid 4 -->
            <Grid Grid.Row="1" Grid.Column="2" Background="DarkGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="Green" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" />
                <Border Grid.Row="1" Background="Blue" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
                <Border Grid.Row="2" Background="Yellow" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
                <Border Grid.Row="3" Background="Orange" Padding="5,5,5,5" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
                <Border Grid.Row="4" Background="Red" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>

                <StackPanel Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Segoe UI Light" FontSize="42"  Text="Overskrift"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Segoe UI Light" FontSize="24"  Text="INFO Lorem ipsum dolor sit amet, lacinia leo et
                               sapien aenean, congue inventore sapien morbi at, quis varius id ut cras, maecenas ac, mattis bibendum eu. Mi 
                               pellentesque nunc consequat, enim dui pede in ut diam, dui gravida luctus ullamcorper mauris, in volutpat orci 
                              
                               morbi mollis, vestibulum id feugiat augue urna. Eros lacus commodo, eros est donec id vestibulum. Mi ut fusce 
                               semper interdum arcu, et dolor amet porta volutpat, viverra elit maecenas at nonummy ut ultrices, at fusce pede,
                               maecenas malesuada donec pulvinar aliquam ac odio. Purus nunc, nec quis, enim non aliquam, hendrerit duis gravida 
                               sed consequat tellus, platea erat at facilisis ultricies elementum sodales. Elit cras fringilla magna sed, aptent 
                               dolor arcu quisque nullam felis, diam venenatis." Height="329" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                    <TextBlock Foreground="Black" FontFamily="Segoe UI Light" FontSize="42"  Text="Faciliteter: "/>
                </StackPanel>

                <!-- Facilitets bokse -->
                <Grid Grid.Row="3" Background="DarkGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Background="Red" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch"/>
                    <Border Grid.Column="1" Background="Red" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch"/>
                    <Border Grid.Column="2" Background="Red" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch"/>
                    <Border Grid.Column="3" Background="Red" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch"/>
                    <Border Grid.Column="4" Background="Red" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch"/>

                </Grid>

                <!-- Pris / Book -->
                <Grid Grid.Row="4" Grid.Column="2" Background="Aqua">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Bottom">
                        <TextBlock Foreground="Black" FontFamily="Segoe UI Light" FontSize="42"  Text="PRIS ,-"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Bottom">
                        <Button Background="Green" Padding="50,0" Foreground="Black" FontFamily="Segoe UI Light" FontSize="42">Book</Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
